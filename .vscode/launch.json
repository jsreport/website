    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "env": {
                "NODE_ENV": "development"
            },
            "name": "Launch Program",
            "program": "${workspaceRoot}\\server.js"
        },
        {
            "name": "Run mocha",
            "type": "node",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "${workspaceFolder}/test/*.ts",
                "--timeout=0",
                "-r=ts-node/register"
            ],
            "request": "launch"
        }
    ]
}