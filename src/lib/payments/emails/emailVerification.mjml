      <mj-column>
        <mj-button href="https://jsreport.net/payments/customer/${customer.uuid}/checkout/${product.code}">Continue</mj-button>
      </mj-column>      
    </mj-section>
    <mj-include path="./components/thankyou.mjml" />
  </mj-body>
