<mjml>
  <mj-head>
    <mj-include path="./components/core.mjml" />
    <mj-preview>jsreport email verification</mj-preview>
  </mj-head>
  <mj-body>
    <mj-section padding-bottom="0px">
      <mj-include path="./components/logo.mjml" />
    </mj-section>
    </mj-section>
    <mj-include path="./components/divider.mjml" />
    <mj-section>
      <mj-column>
        <mj-text>Thank you for verifying your email. Please continue the purchase using the button below.</mj-text>
      </mj-column>
